using UnityEngine;
using System.Collections;

public class KeyItem : MonoBehaviour {

	public string description;
	public GameObject clone;

	GameObject player;
	GameObject playersHand;

	// Use this for initialization
	void Start () {
	
		player = GameObject.FindWithTag ("Player");
		playersHand = GameObject.Find ("Player/Face/Hand");

	}
	
	// Update is called once per frame
	void Update () {


	
	}


	void Inquiry ()
	{


		if (Input.GetButtonUp ("Fire1"))
		{
			player.SendMessage ("Pickup", description);
			GameObject heldItem = Instantiate (clone, playersHand.transform.position, playersHand.transform.rotation) as GameObject;
			heldItem.transform.parent = playersHand.transform;
			heldItem.transform.localScale = new Vector3 ( 1f, 1f, 1f);
			heldItem.name = description;

			Destroy (gameObject);
		}
	}


}
